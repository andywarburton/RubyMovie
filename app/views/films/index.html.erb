<h1>Listing films</h1>

<table border="1" cellpadding="5" cellspacing="0">
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Rating</th>
    <th>Genre</th>
    <th>Edit</th>
		<th>Delete</th>
  </tr>

<% @films.each do |film| %>
  <tr>
    <td><%= link_to film.title, film %></td>
    <td><%= link_to film.url, film.url %></td>
		<td><%= film.rating %></td>
		<td><%= film.genre.title if film.genre %></td>
    <td><%= link_to 'Edit', edit_film_path(film) %></td>
    <td><%= link_to 'Delete', film, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

